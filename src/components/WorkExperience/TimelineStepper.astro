---
export interface Props {
  description: string;
  dates: string;
  bussinesName: string;
  title: string;
  location: string;
  tags: string[];
}

const { description, dates, bussinesName, title, location, tags } = Astro.props;
---

<li class="flex flex-row gap-x-4 mb-10">
  <span>
    <span
      class="flex items-center justify-center w-6 h-6 bg-orange-200 rounded-full -left-4 ring-4 ring-white dark:ring-orange-300 dark:bg-orange-500"
    >
      <!-- <svg
        aria-hidden="true"
        class="w-5 h-5 text-orange-900 dark:text-orange-100"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
          clip-rule="evenodd"></path></svg
      > -->
    </span>
  </span>
  <span>
    <h2 class="font-bold leading-tight text-gray-800 text-lg flex flex-wrap">
      {title}
    </h2>
    <h3 class="text-sm text-gray-700 font-semibold">{bussinesName}</h3>
    <p class="text-sm text-gray-700">{location}</p>
    <p class="text-sm">{dates}</p>
    <p class="text-sm mt-2 text-gray-700 flex-wrap">{description}</p>
    <section class="flex gap-1 mt-4 flex-wrap">
      {
        tags.map((t) => (
          <span class="border rounded-lg border-gray-400 p-1 text-gray-500 bg-gray-300">
            {t}
          </span>
        ))
      }
    </section>
  </span>
</li>
